<launch>

  <arg name="UAV_NAME" default="$(env UAV_NAME)"/>
  <arg name="custom_config" default="" />

  <group ns="$(arg UAV_NAME)">

    <node name="RandomFlier" pkg="nodelet" type="nodelet" args="standalone mrs_testing/RandomFlier" output="screen" >

      <rosparam file="$(find mrs_testing)/config/random_flier.yaml" />

      <!-- Load a user param file -->
      <rosparam if="$(eval not arg('custom_config') == '')" file="$(arg custom_config)" />

        <!-- Subscribers -->
      <remap from="~position_command_in" to="control_manager/position_cmd" />

        <!-- Publishers -->
      <remap from="~reference_out" to="control_manager/reference" />

        <!-- Services -->
      <remap from="~activate_in" to="~activate" />

    </node>

  </group>
</launch>
